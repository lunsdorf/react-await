{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false,
    "isolatedModules": false,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "scripthost"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "lib/",
    "preserveConstEnums": false,
    "pretty": true,
    "removeComments": true,
    "rootDir": "src/",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
